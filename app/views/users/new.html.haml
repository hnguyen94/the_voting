- provide(:title, 'Sign up')
%h1 Sign up
.well
  = form_for @user, html: { class: 'form-horizontal'} do |f|
    .form-group
      = f.label :name, class: 'control-label col-sm-1'
      .col-sm-10
        = f.text_field :name, class: 'form-control'
    %p.actions
      = f.submit "Create my account", class: "btn btn-primary"
