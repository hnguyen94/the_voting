%tr
  %td
    = player.name
    = image_tag(player.image, alt: "player")

  - if game_is_live?(game)
    %td
      = link_to 'Upvote', upvote_game_player_path(game ,player), method: :post
      = link_to 'unvote', unvote_game_player_path(game, player), method: :post
      -# %button.btn.btn-info{:type => "button"}
      -#   %span.glyphicon.glyphicon-thumbs-up.glyphicon-align-center
      -#   %span.badge= player.get_upvotes.size




  - if game_is_open?(game) && is_current_user_game_owner?(game,current_user.id)
    %td= link_to 'Delete', game_player_path(game, player), method: :delete, class:"btn btn-danger"
