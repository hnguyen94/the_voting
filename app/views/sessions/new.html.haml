%h1 Log In

.well
  = form_for :session, url: login_path, html: { class: 'form-horizontal'} do |f|
    .form-group
      = f.label :name, class: 'control-label col-sm-1'
      .col-sm-10
        = f.text_field :name, class: 'form-control'

    %p.actions
      = f.submit 'Log in', class: 'btn btn-primary'

%p= link_to 'Sign in with Facebook', '/auth/facebook'
%p= link_to 'Sign up', signup_path
